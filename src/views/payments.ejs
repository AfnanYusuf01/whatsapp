<script>
let editPaymentId = null;
let deletePaymentId = null;

function editPayment(id) {
  editPaymentId = id;
  const order = <%- JSON.stringify(orders) %>.find(o => o.id === id);
  if (order) {
    document.getElementById('payment-id').value = order.id;
    document.getElementById('edit-amount').value = order.amount;
    document.getElementById('edit-method').value = order.payment_method || '';
    document.getElementById('edit-status').value = order.payment_status;
    document.getElementById('payment-modal').classList.remove('hidden');
  }
}

function closePaymentModal() {
  document.getElementById('payment-modal').classList.add('hidden');
  editPaymentId = null;
}

document.getElementById('payment-form').addEventListener('submit', function(e) {
  e.preventDefault();
  const data = {
    amount: document.getElementById('edit-amount').value,
    payment_method: document.getElementById('edit-method').value,
    payment_status: document.getElementById('edit-status').value
  };
  fetch(`/dashboard/payments/${editPaymentId}`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data)
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      closePaymentModal();
      showAlert(data.message, 'success');
      setTimeout(() => { location.reload(); }, 1000);
    } else {
      showAlert(data.message, 'error');
    }
  })
  .catch(error => {
    showAlert('Error saving payment', 'error');
  });
});

function deletePayment(id) {
  deletePaymentId = id;
  document.getElementById('delete-payment-modal').classList.remove('hidden');
}

function closeDeletePaymentModal() {
  document.getElementById('delete-payment-modal').classList.add('hidden');
  deletePaymentId = null;
}

function confirmDeletePayment() {
  if (deletePaymentId) {
    fetch(`/dashboard/payments/${deletePaymentId}/delete`, {
      method: 'POST',
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        document.getElementById(`order-row-${deletePaymentId}`).remove();
        showAlert(data.message, 'success');
        closeDeletePaymentModal();
      } else {
        showAlert(data.message, 'error');
      }
    })
    .catch(error => {
      showAlert('Error deleting payment', 'error');
    });
  }
}

function showAlert(message, type) {
  const alertContainer = document.getElementById('alert-container');
  const alertClass = type === 'success' ? 'bg-green-100 border-green-400 text-green-700' : 'bg-red-100 border-red-400 text-red-700';
  alertContainer.innerHTML = `
    <div class="${alertClass} border px-4 py-3 rounded mb-4">
      ${message}
    </div>
  `;
  setTimeout(() => {
    alertContainer.innerHTML = '';
  }, 5000);
}
</script> 