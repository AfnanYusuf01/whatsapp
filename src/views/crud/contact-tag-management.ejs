    <script>
        let isEdit = false;
        let deleteTagId = null;

        function openCreateModal() {
            isEdit = false;
            document.getElementById('modal-title').textContent = 'Add new tag';
            document.getElementById('tag-form').reset();
            document.getElementById('tag-id').value = '';
            document.getElementById('tag-modal').classList.remove('hidden');
        }

        function editTag(id) {
            isEdit = true;
            document.getElementById('modal-title').textContent = 'Edit tag';
            
            fetch(`/dashboard/contact-tags/${id}`)
                .then(response => response.json())
                .then(data => {
                    if (data.tag) {
                        const tag = data.tag;
                        document.getElementById('tag-id').value = tag.id;
                        document.getElementById('name').value = tag.name;
                        
                        document.getElementById('tag-modal').classList.remove('hidden');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showAlert('Error loading tag data', 'error');
                });
        }

        function deleteTag(id) {
            deleteTagId = id;
            document.getElementById('delete-tag-modal').classList.remove('hidden');
        }

        function confirmDelete() {
            if (deleteTagId) {
                fetch(`/dashboard/contact-tags/${deleteTagId}/delete`, {
                    method: 'POST',
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById(`tag-row-${deleteTagId}`).remove();
                        showAlert(data.message, 'success');
                        closeDeleteModal();
                    } else {
                        showAlert(data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showAlert('Error deleting tag', 'error');
                });
            }
        }

        function closeModal() {
            document.getElementById('tag-modal').classList.add('hidden');
        }

        function closeDeleteModal() {
            document.getElementById('delete-tag-modal').classList.add('hidden');
            deleteTagId = null;
        }

        function showAlert(message, type) {
            const alertContainer = document.getElementById('alert-container');
            const alertClass = type === 'success' ? 'bg-green-100 border-green-400 text-green-700' : 'bg-red-100 border-red-400 text-red-700';
            
            alertContainer.innerHTML = `
                <div class="${alertClass} border px-4 py-3 rounded mb-4">
                    ${message}
                </div>
            `;
            
            setTimeout(() => {
                alertContainer.innerHTML = '';
            }, 5000);
        }

        // Form submission
        document.getElementById('tag-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());
            
            const url = isEdit ? `/dashboard/contact-tags/${data.tag_id}` : '/dashboard/contact-tags';
            const method = 'POST';
            
            fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    closeModal();
                    showAlert(data.message, 'success');
                    // Reload page to refresh data
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showAlert(data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('Error saving tag', 'error');
            });
        });

        // Preview CSV (first 5 rows)
        document.getElementById('csv-file').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = function(evt) {
                const lines = evt.target.result.split('\n').slice(0, 6); // header + 5 rows
                document.getElementById('csv-preview').classList.remove('hidden');
                document.getElementById('preview-content').innerHTML = lines.map(l => l.replace(/</g, '&lt;')).join('<br>');
            };
            reader.readAsText(file);
        });
    </script>
