        };

        try {
          const response = await fetch(
            `${API_BASE_URL}/devices/${DEVICE_ID}/settings/ai`,
            {
              method: "PUT",
              headers: {
                "Content-Type": "application/json",
                "X-API-Token": API_TOKEN,
