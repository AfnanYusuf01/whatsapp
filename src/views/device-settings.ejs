        const resultDiv = document.getElementById("testResult");
        resultDiv.innerHTML =
          '<div class="text-muted">ü§ñ Testing AI response...</div>';

        try {
          const response = await fetch(`${API_BASE_URL}/test-ai`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              "X-API-Token": API_TOKEN,
            },
            body: JSON.stringify({
              deviceId: DEVICE_ID,
              message: message,
            }),
